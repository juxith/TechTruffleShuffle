
@{
	ViewBag.Title = "Admin";
}

<div class="container">
	<h1 align="center" style="font-size:45px; font-weight:bolder">Admin</h1>
	<p>
		@Html.ActionLink("Register a new User", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })
	</p>
	<p>
		@Html.ActionLink("Reset user password", "ResetPassword", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })
	</p>
	<p>
		@Html.ActionLink("Create static page", "CreateStaticPage", "Home", routeValues: null, htmlAttributes: new { id = "registerLink" })
	</p>
	<hr /><br />
	<p align="center">
		<button class="btn btn-primary" id="adminSearch-blog-button">Search</button>
		<select alight="right" id="searchStatusList" required>
			<option value="allAuthorPosts">All Posts</option>
			<option value="AuthorPublishedPosts">Published Posts</option>
			<option value="AuthorPendingPosts">Pending Posts</option>
			<option value="AuthorRemovedPosts">Removed Posts</option>
		</select>
		<select alight="right" id="filterByList">
			<option value="blogAllAuthors">All Authors</option>
			<option value="blogAuthorName">Author Name </option>
		</select>
		<input type="text" id="inputForAdminSearch" />
	</p>
	<p align="center">
		<button class="btn btn-primary" id="clear-adminFilters-button">Clear Filters</button>
	</p>
	<div><br /><hr /></div>
</div>
<div class="container">
	<div class="allAuthorBlogs">
		@*all blogs by one author go here*@
	</div>
	<div class="filteredAuthorBlogs">
		@*filtered blogs by status by one author go here*@
	</div>
</div>